[Unit]
Description=CIAO Scheduler Service
After=network.target

[Service]
Type=simple
ExecStart={{ environment_path }}/ciao-scheduler --cacert=/etc/pki/ciao/CAcert-{{ ciao_controller_fqdn }}.pem \
                                  --cert=/etc/pki/ciao/cert-Scheduler-{{ ciao_controller_fqdn }}.pem \
                                  --logtostderr -v 2
User=ciao

[Install]
WantedBy=multi-user.target
